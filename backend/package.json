{
  "name": "upskill-global-backend",
  "version": "1.0.0",
  "description": "Backend for Upskill Global Student Registration System",
  "main": "server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend deployment preparation'",
    "azure-deploy": "npm ci --only=production && npm run build",
    "prestart": "npm run validate-env",
    "validate-env": "node -e \"if (!process.env.MONGO_URI) { console.error('MONGO_URI is not set'); process.exit(1); }\"",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "education",
    "student",
    "registration"
  ],
  "author": "Boopathi D",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22"
  },
  "overrides": {
    "minimist": "^1.2.6"
  }
}
