{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "frontend": {
      "source": "frontend",
      "buildCommand": "npm install && npm run build",
      "startCommand": "npm run start"
    },
    "backend": {
      "source": "backend",
      "buildCommand": "npm install",
      "startCommand": "npm start"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  }
}
